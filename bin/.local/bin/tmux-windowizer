#!/usr/bin/env bash

if [[ -z $TMUX ]]; then
	echo "not in tmux"
	exit 0
fi

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(find ~/dev/work ~/dev/personal ~/.dotfiles -mindepth 1 -maxdepth 1 -type d | fzf-tmux -p)
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)

tmux new-window -n $selected_name -c $selected
