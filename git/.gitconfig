[core]
	excludesfile = ~/.gitignore_global

[user]
  name = Evan McNeely
  email = evanmcneely@me.com

[alias]  
  co = checkout
  br = branch
  cm = commit
  jst = status
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[pull]
  rebase = false
  default = current

[checkout]
  defaultRemote = origin

# faster git server communication.
# like a LOT faster. https://opensource.googleblog.com/2018/05/introducing-git-protocol-version-2.html
[protocol]
  version = 2

[include] path = ~/.gitconfig_local

[includeIf "exists:.git-blame-ignore-revs"]
  path = .gitconfig-with-ignore-revs

; echo '[includeIf "exists:.git-blame-ignore-revs"]
;     path = .gitconfig-with-ignore-revs' >> ~/.gitconfig && echo '[blame]
;     ignoreRevsFile = .git-blame-ignore-revs' > ~/.gitconfig-with-ignore-revs

