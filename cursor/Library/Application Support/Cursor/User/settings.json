{
  // editor
  // -----------------------------------------------
  "editor.accessibilitySupport": "off",
  "editor.detectIndentation": true,
  "editor.formatOnSave": false,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.55,
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,

  // themes
  // -----------------------------------------------
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "editor.fontFamily": "FiraCode NFM, FiraCode Nerd Font",

  // liveshare
  // -----------------------------------------------
  "liveshare.allowGuestTaskControl": true,
  "liveshare.allowGuestDebugControl": true,
  "liveshare.focusBehavior": "prompt",
  "liveshare.sharedTerminalHeight": 300,
  "liveshare.sharedTerminalWidth": 170,

  // terminal
  // -----------------------------------------------
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.defaultProfile.osx": "zsh",

  // spell check
  // -----------------------------------------------
  "cSpell.userWords": [
    "codeium",
    "jsonhandler",
    "Leadpage",
    "leadpages",
    "leadpagestest",
    "liveshare",
    "lpagestest",
    "Neovim"
  ],

  //vim
  // -----------------------------------------------
  "vim.debug.silent": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/opt/homebrew/Cellar/neovim/0.9.1/bin/nvim",
  "vim.neovimUseConfigFile": true,
  "vim.neovimConfigPath": "~/.config/nvim/init.lua",

  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.visualstar": true,
  "vim.commandLineModeKeyBindings": [],
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"],
      "silent": true
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    },

    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["[", "h"],
      "commands": ["workbench.action.compareEditor.nextChange"],
      "when": "isInDiffEditor"
    },
    {
      "before": ["]", "h"],
      "commands": ["workbench.action.compareEditor.previousChange"],
      "when": "isInDiffEditor"
    },
    {
      "before": ["[", "h"],
      "commands": ["workbench.action.editor.nextChange"],
      "when": "editorTextFocus"
    },
    {
      "before": ["]", "h"],
      "commands": ["workbench.action.editor.previousChange"],
      "when": "editorTextFocus"
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  // formatter
  // -----------------------------------------------
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "valeryanm.vscode-phpsab"
  },

  // other
  // -----------------------------------------------
  "window.restoreWindows": "none",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "extensions.ignoreRecommendations": true,
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.experimental.useVersion2": true,
  "codeium.enableCodeLens": false,
  "git.openRepositoryInParentFolders": "always",
  "terminal.external.osxExec": "wezterm",
  "workbench.editor.showTabs": "single",
  "breadcrumbs.enabled": false,
  "jest.autoRun": {
    "watch": false,
    "onStartup": ["off"]
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "codeium.enableConfig": {
    "*": true
  },
  "window.zoomLevel": 1,
  // git blame
  // "gitblame.inlineMessageEnabled": true,
  "gitblame.statusBarMessageFormat": "${author.name} (${time.ago})",
  // "gitblame.inlineMessageFormat": "${commit.summary}",
  // phpunit in WP
  "phpunit.command": "yarn wp-env run tests-wordpress --env-cwd=wp-content/plugins/leadpages",
  "phpunit.args": ["-c tests/phpunit.xml"],
  "phpunit.php": "",
  "phpunit.phpunit": "phpunit",
  "phpunit.paths": {
    "${workspaceFolder}": "."
  },
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#dd0531"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#61dafb"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Svelte Orange",
      "value": "#ff3d00"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ]
}
